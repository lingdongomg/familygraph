.viewer-container {
  min-height: 100vh;
  background-color: #000;
  display: flex;
  flex-direction: column;
}

/* Loading */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* Photo */
.photo-wrapper {
  flex: 1;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.photo-fullscreen {
  width: 100%;
  height: 100%;
}

/* Tag overlays */
.tag-overlay {
  position: absolute;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
}

.tag-dot {
  width: 24rpx;
  height: 24rpx;
  background-color: #07c160;
  border: 4rpx solid #fff;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.tag-label {
  margin-top: 8rpx;
  padding: 4rpx 12rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 22rpx;
  border-radius: 16rpx;
  white-space: nowrap;
}

/* Empty state */
.empty-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* Action bar */
.action-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: rgba(0, 0, 0, 0.85);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 24rpx;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.action-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.action-item.danger .action-text {
  color: #e64340;
}
