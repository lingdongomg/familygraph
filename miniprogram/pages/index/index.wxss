/* Home page styles */

.family-card {
  position: relative;
}

.family-card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.family-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
}

.family-card-meta {
  margin-top: 16rpx;
}

.family-member-count {
  font-size: 26rpx;
  color: #999999;
}

.action-row {
  display: flex;
  gap: 24rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
}

.empty-actions {
  width: 100%;
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.empty-btn {
  width: 100%;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E0E0E0;
  border-top-color: #8B4513;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}
