/* Profile page styles */

.profile-page {
  padding-bottom: 40rpx;
}

/* User card */
.user-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 30rpx 40rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

/* Avatar */
.avatar-wrapper {
  position: relative;
  margin-bottom: 24rpx;
}

.avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F0E6D8;
  flex-shrink: 0;
}

.avatar-fallback {
  font-size: 48rpx;
  color: #8B4513;
  font-weight: 600;
}

.avatar-edit-badge {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: #8B4513;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 3rpx solid #FFFFFF;
}

.avatar-edit-icon {
  color: #FFFFFF;
  font-size: 20rpx;
  line-height: 1;
}

/* Nickname display */
.nickname-area {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 8rpx;
}

.nickname-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
}

.nickname-edit-btn {
  padding: 4rpx 16rpx;
  border: 2rpx solid #8B4513;
  border-radius: 20rpx;
}

.edit-icon {
  font-size: 22rpx;
  color: #8B4513;
}

/* Nickname editing */
.nickname-edit-area {
  width: 100%;
  margin-top: 8rpx;
  padding: 0 20rpx;
}

.nickname-input {
  text-align: center;
  margin-bottom: 20rpx;
}

.nickname-edit-actions {
  display: flex;
  justify-content: center;
  gap: 24rpx;
}

.nickname-action-btn {
  padding: 12rpx 48rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
}

.cancel-btn {
  background: #F5F5F5;
  color: #666666;
}

.confirm-btn {
  background: #8B4513;
  color: #FFFFFF;
}

.confirm-btn:active {
  opacity: 0.8;
}

/* Family list */
.family-list-card {
  padding: 0;
  overflow: hidden;
}

.family-item {
  padding: 28rpx 30rpx;
}

.family-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  background: #F0E6D8;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.family-icon-text {
  font-size: 32rpx;
  color: #8B4513;
  font-weight: 600;
}

.empty-family-card {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx 30rpx;
}

.empty-family-text {
  font-size: 28rpx;
  color: #999999;
}

/* Settings */
.settings-card {
  padding: 0;
  overflow: hidden;
}

.settings-item {
  padding: 30rpx;
}

.settings-label {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
}

/* Loading spinner */
.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E0E0E0;
  border-top-color: #8B4513;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}
