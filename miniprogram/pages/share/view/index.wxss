/* Share view page styles */

.share-view-page {
  padding-bottom: 120rpx;
}

/* Error state */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 60rpx;
}

.error-icon-circle {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #FFF3E0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.error-icon-text {
  font-size: 64rpx;
  font-weight: 700;
  color: #8B4513;
}

.error-message {
  font-size: 30rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 40rpx;
}

.error-retry-btn {
  width: 240rpx;
}

/* Family header */
.family-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 30rpx;
}

.family-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #8B4513;
}

.family-subtitle {
  font-size: 24rpx;
  color: #999999;
  margin-top: 8rpx;
}

/* Graph section */
.graph-section {
  padding: 24rpx 0;
}

.graph-section .section-title {
  padding: 0 30rpx;
}

.graph-area {
  width: 100%;
  overflow: hidden;
  margin-top: 16rpx;
}

/* Person list section */
.person-list-section {
  padding: 24rpx 0;
}

.person-list-section .section-title {
  padding: 0 30rpx;
}

.person-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.person-avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F0E6D8;
  flex-shrink: 0;
}

.avatar-initial {
  font-size: 32rpx;
  color: #8B4513;
  font-weight: 600;
}

.tag-deceased {
  background: #F5F5F5;
  color: #999999;
}

/* Join button */
.join-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #FFFFFF;
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.join-btn {
  width: 100%;
}

/* Loading spinner */
.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E0E0E0;
  border-top-color: #8B4513;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}
