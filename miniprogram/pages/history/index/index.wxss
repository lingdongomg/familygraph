/* History page styles */

.history-page {
  padding-bottom: 60rpx;
}

/* Loading spinner (consistent with family/home) */
.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E0E0E0;
  border-top-color: #8B4513;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.loading-spinner-sm {
  width: 36rpx;
  height: 36rpx;
  border-width: 3rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* History list */
.history-list {
  padding-bottom: 40rpx;
}

/* History card */
.history-card {
  position: relative;
  margin-bottom: 24rpx;
  padding: 28rpx 30rpx;
  transition: opacity 0.3s;
}

.card-rolled-back {
  opacity: 0.6;
}

/* Card header */
.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

/* Action badges */
.action-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.badge-text {
  font-weight: 500;
}

.action-create {
  background: #E8F5E9;
  color: #2E7D32;
}

.action-update {
  background: #FFF3E0;
  color: #E65100;
}

.action-delete {
  background: #FFEBEE;
  color: #C62828;
}

.action-rollback {
  background: #E3F2FD;
  color: #1565C0;
}

.time-text {
  font-size: 24rpx;
  color: #999999;
}

/* Card body */
.card-body {
  margin-bottom: 16rpx;
}

.person-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.person-label {
  font-size: 26rpx;
  color: #999999;
  flex-shrink: 0;
}

.person-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 600;
}

.changes-row {
  margin-top: 8rpx;
}

.changes-text {
  font-size: 26rpx;
  color: #666666;
}

/* Field changes detail */
.field-changes {
  background: #FAFAFA;
  border-radius: 8rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 16rpx;
}

.field-change-item {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #666666;
}

.field-name {
  color: #8B4513;
  font-weight: 500;
  flex-shrink: 0;
}

.field-arrow {
  margin: 0 4rpx;
  color: #999999;
  flex-shrink: 0;
}

.field-old {
  color: #C62828;
  text-decoration: line-through;
  word-break: break-all;
}

.field-arrow-icon {
  margin: 0 8rpx;
  color: #999999;
  flex-shrink: 0;
}

.field-new {
  color: #2E7D32;
  word-break: break-all;
}

/* Rolled back tag */
.rolled-back-tag {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 16rpx;
  background: #F5F5F5;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.rolled-back-text {
  font-size: 22rpx;
  color: #999999;
}

/* Card footer with rollback button */
.card-footer {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #F0F0F0;
}

.rollback-btn {
  background: #FFFFFF;
  color: #8B4513;
  border: 2rpx solid #8B4513;
  border-radius: 12rpx;
  padding: 16rpx 0;
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
}

.rollback-btn:active {
  background: #FAF0E6;
  opacity: 0.85;
}

.rollback-btn.btn-disabled {
  background: #CCCCCC;
  color: #FFFFFF;
  border-color: #CCCCCC;
}

/* Load more */
.load-more {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
}

/* No more data */
.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more-text {
  font-size: 24rpx;
  color: #CCCCCC;
}
