/* Person header */
.person-header {
  display: flex;
  align-items: center;
}

.person-header-info {
  flex: 1;
  margin-left: 30rpx;
}

.person-name {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  display: block;
}

.person-title {
  font-size: 26rpx;
  color: #8B4513;
  margin-top: 6rpx;
  display: block;
}

.person-tags {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
}

.tag-deceased {
  background: #F5F5F5;
  color: #999999;
}

/* Section header with edit link */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-header .section-title {
  margin-bottom: 0;
}

.edit-link {
  font-size: 26rpx;
  color: #8B4513;
}

/* Info rows */
.info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 0;
}

.info-label {
  font-size: 28rpx;
  color: #666666;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #333333;
  text-align: right;
  margin-left: 20rpx;
  word-break: break-all;
}

.info-empty {
  color: #CCCCCC;
}

/* Remark items */
.remark-item {
  display: flex;
  align-items: flex-start;
  padding: 6rpx 0 6rpx 8rpx;
}

.remark-dot {
  font-size: 28rpx;
  color: #8B4513;
  margin-right: 12rpx;
  line-height: 1.5;
}

.remark-item .info-value {
  text-align: left;
  margin-left: 0;
  line-height: 1.5;
}

/* Photo grid */
.photo-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.photo-thumb {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
}

.empty-hint {
  padding: 20rpx 0;
  text-align: center;
}

/* Delete button */
.delete-btn {
  margin-top: 40rpx;
  padding: 24rpx 0;
  text-align: center;
  font-size: 30rpx;
  color: #E53935;
  background: #FFFFFF;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* Action bar */
.action-bar {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  padding-bottom: 40rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx 0;
  text-align: center;
  font-size: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.action-btn-primary {
  background: #FFFFFF;
  color: #8B4513;
}

.action-btn-danger {
  background: #FFFFFF;
  color: #E53935;
  border: 1rpx solid rgba(229, 57, 53, 0.2);
}
