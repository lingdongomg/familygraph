.invite-card {
  margin-top: 20rpx;
}

.invite-header {
  margin-bottom: 40rpx;
}

.family-name {
  display: block;
  font-size: 26rpx;
  color: #999999;
  margin-top: 8rpx;
}

.code-section {
  text-align: center;
  margin: 40rpx 0;
}

.code-label {
  font-size: 26rpx;
  color: #999999;
}

.code-display {
  background: #FFF8E1;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin: 24rpx 0;
}

.code-text {
  font-size: 64rpx;
  font-weight: bold;
  color: #8B4513;
  letter-spacing: 16rpx;
}

.code-expire {
  font-size: 24rpx;
  color: #999999;
}

.action-row {
  margin-top: 30rpx;
}

.invite-hint {
  margin-top: 40rpx;
  padding: 24rpx;
  background: #F5F5F5;
  border-radius: 12rpx;
}

.hint-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.generate-section {
  text-align: center;
  padding: 60rpx 0;
}

.generate-hint {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

.tip-section {
  margin-top: 30rpx;
  padding: 0 10rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #BBBBBB;
}
