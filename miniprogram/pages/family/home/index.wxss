/* Family home page styles */

.home-page {
  position: relative;
  padding-bottom: 120rpx;
}

.settings-icon {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 48rpx;
  height: 48rpx;
  z-index: 10;
}

.icon-img {
  width: 48rpx;
  height: 48rpx;
}

/* Tabs */
.tab-bar {
  display: flex;
  background: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #999999;
  position: relative;
  transition: color 0.2s;
}

.tab-active {
  color: #8B4513;
  font-weight: 600;
}

.tab-active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #8B4513;
  border-radius: 3rpx;
}

/* Graph area */
.graph-area {
  width: 100%;
  height: 80vh;
  background: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 24rpx;
}

/* Member list */
.member-list {
  background: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx 0;
}

.member-list .section-title {
  padding: 0 30rpx;
}

.member-item .item-title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.member-avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F0E6D8;
  flex-shrink: 0;
}

.avatar-text {
  font-size: 32rpx;
  color: #8B4513;
  font-weight: 600;
}

/* Floating action button */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 100rpx;
  height: 100rpx;
  background: #8B4513;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(139, 69, 19, 0.3);
  z-index: 100;
}

.fab:active {
  opacity: 0.85;
  transform: scale(0.95);
}

.fab-icon {
  color: #FFFFFF;
  font-size: 52rpx;
  font-weight: 300;
  line-height: 1;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #E0E0E0;
  border-top-color: #8B4513;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}
