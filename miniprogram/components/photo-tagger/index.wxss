/* photo-tagger styles */
.photo-tagger {
  width: 100%;
}

.tagger-image-wrap {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.tagger-image {
  width: 100%;
  display: block;
}

/* Tag dot */
.tag-dot {
  position: absolute;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 10;
}

.tag-dot-inner {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background: rgba(139, 69, 19, 0.85);
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.tag-dot-inner--pending {
  background: rgba(233, 30, 99, 0.75);
  animation: pulse 1.2s infinite;
}

@keyframes pulse {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.3);
    opacity: 0.7;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.tag-dot--pending .tag-dot-inner {
  background: rgba(233, 30, 99, 0.75);
}

.tag-dot-label {
  margin-top: 4rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  background: rgba(0, 0, 0, 0.6);
  padding: 2rpx 12rpx;
  border-radius: 8rpx;
  white-space: nowrap;
  max-width: 160rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
