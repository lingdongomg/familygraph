/* approval-card styles */
.approval-card {
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

/* Header */
.card-header {
  display: flex;
  align-items: center;
}

.applicant-avatar {
  flex-shrink: 0;
}

.applicant-avatar-placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #E0E0E0;
  border-radius: 50%;
  width: 64rpx;
  height: 64rpx;
  flex-shrink: 0;
}

.avatar-initial {
  font-size: 28rpx;
  color: #FFFFFF;
  font-weight: 600;
}

.applicant-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.applicant-name {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.request-time {
  font-size: 24rpx;
  color: #999999;
  margin-top: 4rpx;
}

/* Status badge */
.status-badge {
  flex-shrink: 0;
  font-size: 22rpx;
  padding: 6rpx 18rpx;
  border-radius: 20rpx;
  margin-left: 16rpx;
}

.status-pending {
  background: #FFF3E0;
  color: #E65100;
}

.status-approved {
  background: #E8F5E9;
  color: #2E7D32;
}

.status-rejected {
  background: #FFEBEE;
  color: #C62828;
}

.status-expired {
  background: #F5F5F5;
  color: #9E9E9E;
}

/* Body */
.card-body {
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #F0F0F0;
}

.claim-label {
  font-size: 26rpx;
  color: #666666;
}

.claim-person {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

/* Remark */
.card-remark {
  margin-top: 16rpx;
}

.remark-label {
  font-size: 26rpx;
  color: #666666;
}

.remark-text {
  font-size: 26rpx;
  color: #666666;
}

/* Action buttons */
.card-actions {
  display: flex;
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #F0F0F0;
  justify-content: flex-end;
}

.action-btn {
  padding: 14rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  text-align: center;
  margin-left: 20rpx;
}

.btn-reject {
  background: #FFFFFF;
  color: #E53935;
  border: 2rpx solid #E53935;
}

.btn-reject:active {
  opacity: 0.7;
}

.btn-approve {
  background: #8B4513;
  color: #FFFFFF;
}

.btn-approve:active {
  opacity: 0.8;
}
